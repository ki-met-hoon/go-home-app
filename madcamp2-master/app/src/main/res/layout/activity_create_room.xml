<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.leave.CreateRoomActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="방 만들기"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_margin="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp" >

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/create_profile"
                android:background="@drawable/round_bg2"
                android:clipToOutline="true"
                android:layout_marginRight="20dp"/>

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/create_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="name"
                android:textSize="25dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/create_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="details"
                android:textSize="20dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp" >

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="방 제목"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginEnd="30dp"/>

        <EditText
            android:id="@+id/roomName"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@android:color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp" >

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="퇴근 시간"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginEnd="30dp"/>

        <EditText
            android:id="@+id/exitTime"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@android:color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp" >

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="정원"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginEnd="30dp"/>

        <EditText
            android:id="@+id/fullMember"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@android:color/white" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/createConfirm"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Confirm"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_weight="1"
                android:clickable="true"/>
            <TextView
                android:id="@+id/createCancel"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Cancel"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_weight="1"
                android:clickable="true"/>


        </LinearLayout>


    </RelativeLayout>

</LinearLayout>